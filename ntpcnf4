---
- name: Replace pool entry with two server entries in chrony.conf
  hosts: all
  become: yes
  gather_facts: no

  tasks:

    - name: Backup original chrony.conf
      copy:
        src: /etc/chrony.conf
        dest: /etc/chrony.conf.bak
        remote_src: yes

    - name: Replace pool 2.rhel.pool.ntp.org iburst with two server entries
      replace:
        path: /etc/chrony.conf
        regexp: '^pool\s+2\.rhel\.pool\.ntp\.org\s+iburst'
        replace: |
          server 10.20.1.2 iburst
          server 10.0.1.3 iburst
        backup: no

    - name: Restart chronyd to apply changes
      service:
        name: chronyd
        state: restarted
